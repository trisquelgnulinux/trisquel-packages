# lxpanel <profile> config file. Manually editing is not recommended.
# Use preference dialog in lxpanel to adjust config when you can.

Global {
    edge=bottom
    allign=left
    margin=0
    widthtype=percent
    width=100
    height=24
    transparent=1
    tintcolor=#000000
    alpha=150
    autohide=0
    heightwhenhidden=2
    setdocktype=1
    setpartialstrut=1
    usefontcolor=0
    fontsize=8
    fontcolor=#000000
    usefontsize=1
    background=0
    backgroundfile=/usr/share/lxpanel/images/trisquel-mini-background.png
    iconsize=24
}

